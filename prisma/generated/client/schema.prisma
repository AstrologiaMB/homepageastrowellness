generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Datos personales adicionales
  birthDate        DateTime?
  birthCity        String?
  birthCountry     String?
  birthHour        Int?
  birthMinute      Int?
  knowsBirthTime   Boolean   @default(true)
  residenceCity    String?
  residenceCountry String?
  timezone         String? // Calculado automáticamente

  // Datos para rectificación de carta
  rectificationRequested           Boolean   @default(false)
  rectificationAcceptedUncertainty Boolean   @default(false)
  rectificationStatus              String? // "pending", "in_progress", "completed", "rejected"
  rectificationRequestDate         DateTime?

  // Relaciones
  rectificationEvents RectificationEvent[]
}

model RectificationEvent {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  eventType   String // "sad" o "happy"
  description String
  eventDate   DateTime
  notes       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
