# Environment Variables for Astrowellness Frontend
# Copy this file to .env.local for development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (for development)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT Secret
JWT_SECRET="your-jwt-secret-here"

# External APIs
OPENCAGE_API_KEY="your-opencage-api-key"

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Email Services (Dual Configuration)
# Local Development: AWS SES
# Fly.io Production: Resend

# AWS SES (for local development)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# Resend (for Fly.io production)
RESEND_API_KEY="your-resend-api-key"

# Email Configuration
FROM_EMAIL="noreply@astrochat.online"

# API URLs for Microservices (Production - Fly.io)
# These MUST have NEXT_PUBLIC_ prefix to be accessible in the browser
# Development uses hardcoded localhost URLs (no config needed)
NEXT_PUBLIC_CALCULOS_API_URL="https://calculo-carta-natal-api.fly.dev"
NEXT_PUBLIC_INTERPRETACIONES_API_URL="https://astro-interpretador-rag-fastapi.fly.dev"
NEXT_PUBLIC_CALENDARIO_API_URL="https://astro-calendar-personal-fastapi.fly.dev"
NEXT_PUBLIC_ASTROGEMATRIA_API_URL="https://astrogematria-fastapi.fly.dev"
NEXT_PUBLIC_CARTA_ELECTIVA_API_URL="https://carta-electiva-api.fly.dev"

# Feature Flags
# Activar features individuales (false por defecto = oculto en menú)
# NEXT_PUBLIC_ENABLE_PERSONAL_CALENDAR="true"
# NEXT_PUBLIC_ENABLE_LUNAR_CALENDAR="true"
# NEXT_PUBLIC_ENABLE_TROPICAL_CHART="true"
# NEXT_PUBLIC_ENABLE_DRACONIC_CHART="true"
# NEXT_PUBLIC_ENABLE_ELECTIONAL="true"
# NEXT_PUBLIC_ENABLE_ASTROGEMATRIA="true"
# NEXT_PUBLIC_ENABLE_ALL_FEATURES="true"

# Testing de feature flags y beta users en local
# Cuando es "true", desactiva el bypass automático de dev mode en isFeatureEnabled()
# Usar para probar que la lógica de beta users funciona correctamente
# NEXT_PUBLIC_TEST_FEATURE_FLAGS="true"
